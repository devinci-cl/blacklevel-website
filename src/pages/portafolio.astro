	// Función para seleccionar una imagen aleatoria de un proyecto
	function getRandomImage(project: typeof projectsData[0]): string {
		const images = project.images;
		const normalizedImages = images.map(img => {
			if (typeof img === 'string') {
				return { src: img, text: '' };
			}
			return img;
		});
		
		if (normalizedImages.length === 0) return '';
		
		const randomIndex = Math.floor(Math.random() * normalizedImages.length);
		return normalizedImages[randomIndex].src;
	}

	// Cargar imágenes aleatorias en las tarjetas del portafolio
	projectsData.forEach((project, index) => {
		const imageElement = document.getElementById(`project-image-${index}`);
		if (imageElement) {
			const randomImage = getRandomImage(project);
			if (randomImage) {
				(imageElement as HTMLImageElement).src = randomImage;
				(imageElement as HTMLImageElement).onerror = function() {
					// Si la imagen falla, mostrar un placeholder
					this.style.display = 'none';
				};
			}
		}
	});

	// Elementos del modal
	const modal = document.getElementById('project-modal');
	const modalOverlay = document.getElementById('modal-overlay');
	const modalContent = document.getElementById('modal-content');
