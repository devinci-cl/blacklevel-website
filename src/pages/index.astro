<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';

	gsap.registerPlugin(ScrollTrigger);

	// Animación del nav
	gsap.fromTo('#nav', 
		{ y: -100, opacity: 0 },
		{ y: 0, opacity: 1, duration: 0.8, ease: 'power3.out' }
	);

	// Hero Slider
	const slides = document.querySelectorAll('.slide');
	const indicators = document.querySelectorAll('.indicator');
	let currentSlide = 0;

	function goToSlide(index: number) {
		slides.forEach((slide, i) => {
			gsap.to(slide, {
				opacity: i === index ? 1 : 0,
				duration: 1,
				ease: 'power2.inOut'
			});
		});

	indicators.forEach((indicator, i) => {
		if (i === index) {
			indicator.classList.add('bg-white', 'shadow-lg', 'shadow-white/30');
			indicator.classList.remove('bg-white/20', 'border', 'border-white/20');
		} else {
			indicator.classList.remove('bg-white', 'shadow-lg', 'shadow-white/30');
			indicator.classList.add('bg-white/20', 'border', 'border-white/20');
		}
	});

		currentSlide = index;
	}

	indicators.forEach((indicator, index) => {
		indicator.addEventListener('click', () => goToSlide(index));
	});

	// Auto-play slider
	setInterval(() => {
		const nextSlide = (currentSlide + 1) % slides.length;
		goToSlide(nextSlide);
	}, 5000);

	// Scroll Sections con efecto estilo Apple
	const scrollSections = document.querySelectorAll('.scroll-section');

	scrollSections.forEach((section, index) => {
		const isLast = index === scrollSections.length - 1;

		if (!isLast) {
			gsap.to(section, {
				opacity: 0,
				scale: 0.8,
				scrollTrigger: {
					trigger: section,
					start: 'top top',
					end: 'bottom top',
					scrub: true,
				}
			});
		}

		// Fade in inicial
		gsap.fromTo(section,
			{ opacity: 0, scale: 0.9 },
			{
				opacity: 1,
				scale: 1,
				scrollTrigger: {
					trigger: section,
					start: 'top bottom',
					end: 'top center',
					scrub: true,
				}
			}
		);
	});

	// Animación del botón de WhatsApp
	gsap.fromTo('#whatsapp-btn',
		{ scale: 0, rotation: -180 },
		{ scale: 1, rotation: 0, duration: 0.8, delay: 1.5, ease: 'back.out(1.7)' }
	);
</script>
